rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Partner logos
    match /partners/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Instructor images
    match /instructors/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Blog post images
    match /blog/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Admin user avatars
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
